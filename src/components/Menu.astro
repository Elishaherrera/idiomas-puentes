---
import { Image } from "astro:assets";
import logo from "../assets/LogoIp.png";
import { HandHelping } from "@lucide/astro";
---

<nav
  class="fixed z-50 w-full bg-gray-100 py-6 px-10 flex items-center justify-between shadow-lg"
>
  <div class="flex-shrink-0">
    <Image src={logo} alt="logo Idiomas Puentes" class="md:h-10 h-7 w-auto" />
  </div>

  <ul class="list-none p-0 m-0 items-center hidden md:flex">
    <li class="mx-6">
      <a
        href="/"
        class="text-gray-900 text-sm md:text-base transition duration-300 hover:text-blue-900 inline-block pb-1 border-b-3 border-transparent hover:border-secondary"
        >Inicio</a
      >
    </li>
    <li class="mx-6">
      <a
        href="/Nosotros"
        class="text-gray-900 text-sm md:text-base transition duration-300 hover:text-blue-900 inline-block pb-1 border-b-3 border-transparent hover:border-secondary"
        >Nosotros</a
      >
    </li>
    <li class="mx-6">
      <a
        href="/Proyectos"
        class="text-gray-900 text-sm md:text-base transition duration-300 hover:text-blue-900 inline-block pb-1 border-b-3 border-transparent hover:border-secondary"
        >Proyectos</a
      >
    </li>
    <li class="mx-6">
      <a
        href="/Historias"
        class="text-gray-900 text-sm md:text-base transition duration-300 hover:text-blue-900 inline-block pb-1 border-b-3 border-transparent hover:border-secondary"
        >Historias</a
      >
    </li>
    <li class="mx-6">
      <a
        href="/Recursos"
        class="text-gray-900 text-sm md:text-base transition duration-300 hover:text-blue-900 inline-block pb-1 border-b-3 border-transparent hover:border-secondary"
        >Recursos</a
      >
    </li>
    <li class="mx-6">
      <a
        href="/Involucrate"
        class="text-gray-900 text-sm md:text-base transition duration-300 hover:text-blue-900 inline-block pb-1 border-b-3 border-transparent hover:border-secondary"
        >Invol√∫crate</a
      >
    </li>
    <li class="mx-6">
      <a
        href="/Contacto"
        class="text-gray-900 text-sm md:text-base transition duration-300 hover:text-blue-900 inline-block pb-1 border-b-3 border-transparent hover:border-secondary"
        >Contacto</a
      >
    </li>

    <li>
      <a
        href="/Donar"
        class="ml-10 bg-blue-700 text-white font-medium text-sm md:text-base py-3 px-8 rounded-xl transition duration-300 hover:bg-blue-900 transform hover:scale-105 inline-flex items-center justify-center"
      >
        Donar
        <HandHelping class="ml-2" size="20" />
      </a>
    </li>
  </ul>
</nav>
