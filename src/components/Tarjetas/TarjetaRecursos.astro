---
const {titulo, descripcion, explorar} = Astro.props;
---

<div class="bg-gray-50 rounded-2xl px-8 py-4 transition-all duration-200 transform hover:scale-105 hover:shadow-lg">
    <div class="text-blue-900 py-4">
            <slot />
    </div>
            <h1 class="font-serif font-bold text-blue-950 text-xl justify-self-start">{titulo}</h1>
            <h2 class="mt-4 text-start text-gray-700">{descripcion}</h2>
            <h3 class="text-blue-900 cursor-pointer hover:text-black mt-2 py-4 flex justify-self-start items-start">{explorar}
               <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            
            </h3>
</div>
