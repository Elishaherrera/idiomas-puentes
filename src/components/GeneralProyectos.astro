---
import Impactos from "./Tarjetas/TarjetaImpacto.astro";
import Container from './Container.astro';
---

<section class="min-h-screen">
    <Container>
        <div class="relative bg-white py-12 px-4 sm:px-6 lg:px-8 shadow-[0_0_6px_0_rgba(0,0,0,0.15)] rounded-2xl">
            <div class="container mx-auto text-center space-y-4">
                <h2 class="text-2xl font-bold text-gray-800 mb-8">Progreso General del Proyecto</h2>
                <div class=" justify-center gap-6 mx-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4">
                    <div class="flex flex-col bg-green-50 px-8 py-4 rounded-lg shadow-md text-center space-y-2 border border-green-200">
                        <span class="text-3xl font-bold text-green-600">4</span>
                        <span class="text-green-600">Completados</span>
                    </div>
                    <div class="flex flex-col bg-yellow-50 px-8 py-4 rounded-lg shadow-md text-center space-y-2 border border-yellow-200">
                        <span class="text-3xl font-bold text-yellow-600">3</span>
                        <span class="text-yellow-600">En progreso</span>
                    </div>
                    <div class="flex flex-col bg-gray-50 px-8 py-4 rounded-lg shadow-md text-center space-y-2 border border-gray-200">
                        <span class="text-3xl font-bold text-gray-600">59</span>
                        <span class="text-gray-600">Sin iniciar</span>
                    </div>
                    <div class="flex flex-col bg-blue-50 px-8 py-4 rounded-lg shadow-md text-center space-y-2 border border-blue-200">
                        <span class="text-3xl font-bold text-blue-600">6%</span>
                        <span class="text-blue-600">Total completado</span>
                    </div> 
                </div>   
                <div class="mt-10 p-2 px-10">
                   <div class="w-full bg-gray-200 rounded-full h-4"><div class="h-4 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full transition-all duration-1000" style="width: 6%;"></div></div>
                </div>
            </div>    
        </div> 
    </Container>
</section>
 

