---
import { Send } from "@lucide/astro";
import Container from "./Container.astro";
---

<section class="min-h-screen">
  <Container>
    <div
      class="bg-white rounded-3xl shadow-[0_0_6px_0_rgba(0,0,0,0.15)] px-12 py-20"
    >
      <div>
        <span class="text-4xl font-bold pb-4 flex justify-center items-center"
          >Contacto</span
        >
        <div class="space-y-4">
          <span class="mt-4 font-medium text-gray-700">Nombre completo</span>
          <input
            type="text"
            class="border border-gray-300 rounded-lg p-2 w-full mt-2"
            placeholder="Nombre completo"
          />
          <span class="mt-4 font-medium text-gray-700">Correo electrónico</span>
          <input
            type="email"
            class="border border-gray-300 rounded-lg p-2 w-full mt-2"
            placeholder="Correo electrónico"
          />
          <span class="mt-4 font-medium text-gray-700">Asunto</span>
          <input
            type="text"
            class="border border-gray-300 rounded-lg p-2 w-full mt-2"
            placeholder="¿En qué podemos ayudarte?"
          />
          <span class="mt-4 font-medium text-gray-700">Mensaje</span>
          <textarea
            class="border border-gray-300 rounded-lg p-2 w-full mt-2"
            rows="4"
            placeholder="Escribe tu mensaje aquí..."></textarea>
        </div>
        <div class="mt-4 mb-2 w-full">
          <button
            class="text-lg items-center justify-center bg-blue-600 hover:bg-blue-800 text-white font-semibold py-3 px-6 w-full rounded-lg transition-all duration-200"
          >
            <div class="inline-flex text-center items-center">
              <Send size="22" class="text-white" />
            </div>
            Enviar Mensaje
          </button>
        </div>
        <div class="border border-gray-200 mt-8"></div>
        <span class="flex justify-center items-center pt-8 text-gray-700"
          >También puedes contactarnos directamente:</span
        >
        <div
          class="mt-4 flex flex-col sm:flex-row justify-center space-y-1 sm:space-y-0 sm:space-x-4"
        >
          <a
            href="email:hola@empresa.com"
            class="text-blue-600 hover:text-blue-800 transition-colors"
            >hola@empresa.com</a
          >
          <a
            href="tel:+1234567890"
            class="text-blue-600 hover:text-blue-800 transition-colors ml-4"
            >+123 456 7890</a
          >
        </div>
      </div>
    </div>
  </Container>
</section>
